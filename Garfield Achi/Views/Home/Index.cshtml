@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Garfield-Achi</h1>

    <div class="row">
        <h2>Happiness @ViewBag.Happiness </h2>
        <h2> Fullness @ViewBag.Fullness </h2>
        <h2> Energy @ViewBag.Energy </h2>
        <h2> Meals @ViewBag.Meals </h2>
    </div>
    <div class="middle">
        <!-- <img src="~/Images/chill.gif" alt=""> -->

        

        @{    
            if(@ViewBag.Happiness < 1 || @ViewBag.Fullness < 1)
                {
                    <img src="~/Images/dead.gif" alt="">;
                }  
            else if(@ViewBag.Happiness > 99 && @ViewBag.Fullness > 99)
                {
                    <img src="~/Images/win.gif" alt="">;
                }
            else if(@ViewBag.PictureID == 1)
                {
                    <img src="~/Images/eating.gif" alt="">;
                }
            else if(@ViewBag.PictureID == 2)
                {
                    <img src="~/Images/playing.gif" alt="">;
                }
            else if(@ViewBag.PictureID == 3)
                {
                    <img src="~/Images/working.gif" alt="">;
                }
            else if(@ViewBag.PictureID == 4)
                {
                    <img src="~/Images/sleeping.gif" alt="">;
                }
            else if(@ViewBag.PictureID == 5)
                {
                    <img src="~/Images/nofood.gif" alt="">;
                }
            else
                {
                    <img src="~/Images/chill.gif" alt="">;
                }
        }
    </div>
