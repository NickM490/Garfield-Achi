    <div class="row_2">

    @if(@ViewBag.Happiness > 0 || @ViewBag.Fullness > 0)
    {

        <form asp-action="Play" asp-controller="Home" method="POST">
            <input type="submit" value="Play" class="btn btn-warning">
        </form>

        <form asp-action="Feed" asp-controller="Home" method="POST">
            <input type="submit" value="Feed" class="btn btn-success">
        </form>

        
        <form asp-action="Sleep" asp-controller="Home" method="POST">
            <input type="submit" value="Sleep" class="btn btn-secondary">
        </form>

        <form asp-action="Work" asp-controller="Home" method="POST">
            <input type="submit" value="Work" class="btn btn-primary">
        </form>
    }

    </div>
    <br>
    <div class="reset">

    @if(@ViewBag.Happiness < 1 || @ViewBag.Fullness < 1)
    {
        <h3>You have died, would you like to try again?</h3>;

        <form asp-action="Reset" asp-controller="Home" method="POST">
            <input type="submit" value="Try Again?" class="btn btn-danger">
        </form>
    }

    @if(@ViewBag.Happiness > 99 && @ViewBag.Fullness > 99)
    {
        <h3>You have Won, would you like to play again?</h3>;
        <form asp-action="Reset" asp-controller="Home" method="POST">
            <input type="submit" value="Try Again?" class="btn btn-danger">
        </form>
    }
    </div>
</div>
